# Copy this file to terraform.tfvars.<site-code> and fill in your values

# Proxmox endpoint
proxmox_endpoint = "https://proxmox.example.com:8006"
proxmox_insecure = true  # Set to false with valid SSL cert

# Authentication - Use EITHER api_token (recommended) OR username/password
# Option 1: API Token (recommended for automation)
proxmox_api_token = "root@pam!terraform=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Option 2: Username/Password (comment out api_token above if using this)
# proxmox_username = "root@pam"
# proxmox_password = "your-password"

# Proxmox resources
proxmox_node      = "pve"
proxmox_datastore = "local-lvm"
proxmox_bridge    = "vmbr0"
proxmox_ssh_username = "root"  # SSH user for Proxmox host

# Cluster configuration
cluster_name  = "dev-proxmox"

# Omni ISO (REQUIRED)
# Generate ISO first using: ./scripts/prepare-omni-iso.sh <site-code>
# The script will automatically set this value, or specify manually:
omni_iso_name = "talos-omni-dk1d-v1.11.5.iso"

# VM configuration
vm_id_start    = 8000
node_count     = 3
node_cpu       = 2
node_memory    = 4096
node_disk_size = 50
