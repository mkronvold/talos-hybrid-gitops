# Copy this file to terraform.tfvars and fill in your values

# Proxmox credentials
proxmox_endpoint = "https://proxmox.example.com:8006"
proxmox_username = "root@pam"
proxmox_password = "your-password"
proxmox_insecure = true  # Set to false with valid SSL cert

# Proxmox resources
proxmox_node      = "pve"
proxmox_datastore = "local-lvm"
proxmox_bridge    = "vmbr0"

# Talos configuration
talos_version = "1.9.5"
cluster_name  = "dev-proxmox"

# VM configuration
vm_id_start    = 8000
node_count     = 3  # For dev cluster
node_cpu       = 2
node_memory    = 4096
node_disk_size = 50
